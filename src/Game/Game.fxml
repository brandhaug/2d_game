<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane onKeyPressed="#handleKeyPressed" onKeyReleased="#handleKeyReleased" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Game.GameController">
    <children>
      <Canvas fx:id="canvas" height="720.0" layoutX="-1.0" width="1280.0" />
        <Button fx:id="pauseButton" layoutX="1188.0" layoutY="12.0" mnemonicParsing="false" onAction="#pause" prefHeight="64.0" prefWidth="64.0" style="-fx-graphic: url('Resources/buttons/pause.png');" />
        <Button fx:id="coinCounter" layoutX="5.0" layoutY="5.0" opacity="0.7" mnemonicParsing="false" prefHeight="64.0" prefWidth="64.0" style="-fx-graphic: url('Resources/coin/singleCoinSmall.png');" />
      <Pane fx:id="pauseSettingsPane" layoutY="620.0" prefHeight="100.0" prefWidth="1280.0" visible="false">
         <children>
              <Button fx:id="mainMenuButton" layoutX="1016.0" layoutY="12.0" mnemonicParsing="false" onAction="#openMainMenu" prefHeight="64.0" prefWidth="64.0" style="-fx-graphic: url('Resources/buttons/home.png');" styleClass="button" visible="false" />
              <Button fx:id="musicButton" layoutX="1188.0" layoutY="12.0" mnemonicParsing="false" onAction="#toggleMusic" prefHeight="64.0" prefWidth="64.0" style="-fx-graphic: url('Resources/buttons/music_on.png');" visible="false" />
              <Button fx:id="soundButton" layoutX="1106.0" layoutY="12.0" mnemonicParsing="false" onAction="#toggleSound" prefHeight="64.0" prefWidth="64.0" style="-fx-graphic: url('Resources/buttons/sound_on.png');" visible="false" />
         </children>
      </Pane>
      <Pane fx:id="pauseInfoPane" layoutX="425.0" layoutY="269.0" prefHeight="182.0" prefWidth="431.0" visible="false" styleClass="pauseInfoPane">
         <children>
            <Text fx:id="pauseText" layoutX="53.0" layoutY="109.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Game Paused" visible="false">
               <font>
                  <Font size="50.0" />
               </font>
            </Text>
         </children>
      </Pane>
      <Pane fx:id="gameOverPane" layoutX="405.0" layoutY="219.0" prefHeight="282.0" prefWidth="468.0" visible="false" styleClass="gameOverPane">
         <children>
            <Text fx:id="gameOverText" fill="WHITE" layoutX="102.0" layoutY="82.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Game Over" visible="false">
               <font>
                  <Font size="50.0" />
               </font>
            </Text>
            <Button fx:id="gameOverMainMenuButton" layoutX="102.0" layoutY="174.0" mnemonicParsing="false" onAction="#openMainMenu" prefHeight="64.0" prefWidth="64.0" style="-fx-graphic: url('Resources/buttons/home.png');" styleClass="button" visible="false" />
            <Button fx:id="gameOverRetryButton" layoutX="307.0" layoutY="174.0" mnemonicParsing="false" onAction="#restartLevel" prefHeight="64.0" prefWidth="64.0" style="-fx-graphic: url('Resources/buttons/retry.png');" styleClass="button" visible="false" />
         </children>
      </Pane>
    </children>
</AnchorPane>
